<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Login Administrativo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <style>
    /* ===== ESTILOS PARA LOGIN ADMINISTRATIVO ===== */
    :root {
      --primary-dark: #343a40;
      --primary-medium: #495057;
      --primary-light: #6c757d;
      --accent-color: #0d6efd;
      --text-light: #f8f9fa;
      --success-color: #198754;
      --danger-color: #dc3545;
    }

    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 20px;
    }

    .login-container {
      background: white;
      border-radius: 20px;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
      padding: 3rem;
      width: 100%;
      max-width: 450px;
      position: relative;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .login-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .login-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, var(--accent-color), var(--success-color));
    }

    .login-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .login-header h2 {
      color: var(--primary-dark);
      font-weight: 700;
      margin-bottom: 0.5rem;
      font-size: 1.8rem;
    }

    .login-header p {
      color: var(--primary-light);
      font-size: 1rem;
    }

    .admin-icon {
      background: linear-gradient(135deg, var(--accent-color), #0b5ed7);
      width: 80px;
      height: 80px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      box-shadow: 0 8px 20px rgba(13, 110, 253, 0.3);
    }

    .admin-icon i {
      font-size: 2.5rem;
      color: white;
    }

    .form-group {
      margin-bottom: 1.5rem;
      position: relative;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: var(--primary-dark);
      font-size: 0.95rem;
    }

    .input-with-icon {
      position: relative;
    }

    .input-with-icon i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: var(--primary-light);
      font-size: 1.1rem;
      z-index: 2;
    }

    .form-control {
      width: 100%;
      padding: 12px 15px 12px 45px;
      border: 2px solid #e1e5e9;
      border-radius: 10px;
      font-size: 1rem;
      transition: all 0.3s ease;
      background-color: #f8f9fa;
    }

    .form-control:focus {
      border-color: var(--accent-color);
      box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
      background-color: white;
    }

    .btn-login {
      width: 100%;
      background: linear-gradient(135deg, var(--accent-color), #0b5ed7);
      color: white;
      border: none;
      border-radius: 10px;
      padding: 14px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 0.5rem;
      box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
    }

    .btn-login:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
    }

    .btn-login:active {
      transform: translateY(0);
    }

    .alert {
      border-radius: 10px;
      padding: 1rem 1.25rem;
      margin-bottom: 1.5rem;
      border: none;
      font-weight: 500;
    }

    .alert-danger {
      background: linear-gradient(135deg, #f8d7da, #f1b0b7);
      color: #721c24;
      box-shadow: 0 4px 12px rgba(220, 53, 69, 0.15);
    }

    .login-footer {
      text-align: center;
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid #e9ecef;
      color: var(--primary-light);
      font-size: 0.9rem;
    }

    /* ===== TEMA ESCURO ===== */
    body.dark-theme {
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%) !important;
    }

    body.dark-theme .login-container {
      background: #1e1e1e;
      color: #e0e0e0;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
    }

    body.dark-theme .login-header h2 {
      color: #ffffff;
    }

    body.dark-theme .login-header p {
      color: #b0b0b0;
    }

    body.dark-theme .form-group label {
      color: #e0e0e0;
    }

    body.dark-theme .form-control {
      background-color: #2d2d2d;
      border-color: #3d3d3d;
      color: #e0e0e0;
    }

    body.dark-theme .form-control:focus {
      background-color: #2d2d2d;
      border-color: var(--accent-color);
      color: #e0e0e0;
    }

    body.dark-theme .input-with-icon i {
      color: #b0b0b0;
    }

    body.dark-theme .login-footer {
      border-top-color: #3d3d3d;
      color: #b0b0b0;
    }

    body.dark-theme .alert-danger {
      background: linear-gradient(135deg, #3a1e1e, #321a1a);
      color: #f1aeb5;
    }

    /* ===== RESPONSIVIDADE ===== */
    @media (max-width: 576px) {
      .login-container {
        padding: 2rem 1.5rem;
        margin: 10px;
      }

      .login-header h2 {
        font-size: 1.5rem;
      }

      .admin-icon {
        width: 70px;
        height: 70px;
      }

      .admin-icon i {
        font-size: 2rem;
      }

      .btn-login {
        padding: 12px;
      }
    }

    @media (max-width: 400px) {
      .login-container {
        padding: 1.5rem;
      }

      .login-header h2 {
        font-size: 1.3rem;
      }
    }

    /* ===== ANIMAÇÕES ===== */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .login-container {
      animation: fadeIn 0.5s ease-out;
    }

    .alert {
      animation: fadeIn 0.3s ease-out;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="login-header">
      <div class="admin-icon">
        <i class="fas fa-lock"></i>
      </div>
      <h2>Área Administrativa</h2>
      <p>Acesso restrito ao pessoal autorizado</p>
    </div>
    
    <% if (mensagem) { %>
      <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle me-2"></i><%= mensagem %>
      </div>
    <% } %>
    
    <form action="/admin/login" method="POST">
      <div class="form-group">
        <label for="usuario">Usuário</label>
        <div class="input-with-icon">
          <i class="fas fa-user"></i>
          <input id="usuario" name="usuario" type="text" class="form-control" placeholder="Digite seu usuário" required>
        </div>
      </div>
      
      <div class="form-group">
        <label for="senha">Senha</label>
        <div class="input-with-icon">
          <i class="fas fa-key"></i>
          <input id="senha" name="senha" type="password" class="form-control" placeholder="Digite sua senha" required>
        </div>
      </div>
      
      <button type="submit" class="btn-login">
        <i class="fas fa-sign-in-alt me-2"></i> Entrar
      </button>
    </form>

    <!-- botão para ir ao site cliente -->
    <div class="mt-3 text-center">
      <a href="/" class="btn btn-outline-secondary">
        <i class="fas fa-home me-1"></i> Ir para o site (cliente)
      </a>
    </div>
    
    <div class="login-footer">
      <p><i class="fas fa-shield-alt me-1"></i> Acesso Seguro</p>
    </div>
  </div>

  <script>
    // Adiciona foco automático no campo de usuário
    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('usuario').focus();
    });

    // Adiciona validação visual nos campos
    const inputs = document.querySelectorAll('.form-control');
    inputs.forEach(input => {
      input.addEventListener('blur', function() {
        if (this.value.trim() !== '') {
          this.classList.add('has-value');
        } else {
          this.classList.remove('has-value');
        }
      });
    });
  </script>
</body>
</html>