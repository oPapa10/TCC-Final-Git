<!-- filepath: views/partials/compraConfirmacao.ejs -->
<% if (confirmacaoCompra) { %>
    <div class="alert alert-success text-center mt-3 buy-confirmation-alert">
        <h5>Confirmação de Compra</h5>
        <p>Você realmente deseja comprar <strong><%= produtoNome %></strong>?</p>
        <form action="/avaliacao/iniciar" method="POST" class="d-inline">
            <input type="hidden" name="produtoId" value="<%= produtoId %>">
            <button type="submit" class="btn btn-success btn-sm ms-2">Sim, quero comprar</button>
        </form>
        <button onclick="document.getElementById('buyNowConfirmation').innerHTML='';" class="btn btn-secondary btn-sm ms-2">Cancelar</button>
    </div>
<% } else if (mensagemNaoLogado) { %>
    <div class="alert alert-warning text-center mt-3">
        <%= mensagemNaoLogado %>
    </div>
<% } %>