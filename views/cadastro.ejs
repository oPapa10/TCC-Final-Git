    </nav>

    <!-- Conteúdo Principal -->
    <main class="flex-grow-1 d-flex align-items-center">
        <div class="container cadastro-container">
            <div class="cadastro-card">
                <div class="cadastro-header text-center mb-4">
                    <h2 class="cadastro-title">Crie sua conta</h2>
                    <p class="cadastro-subtitle">Preencha os campos abaixo para se cadastrar</p>
                </div>
                <% if (typeof mensagem !== 'undefined' && mensagem) { %>
                  <div class="alert alert-danger text-center"><%= mensagem %></div>
                <% } %>
                <form class="cadastro-form" id="formCadastro" action="/cadastro" method="POST">
                    <div class="form-row">
                        <!-- Coluna 1 - Dados Pessoais -->
                        <div class="form-col">
                            <h5 class="form-section-title"><i class="fas fa-user me-2"></i>Dados Pessoais</h5>
                            <div class="form-group mb-3">
                                <label for="nome" class="form-label">Nome Completo</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome" required>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="email" class="form-label">E-mail</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu e-mail" required>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="senha" class="form-label">Senha</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control" id="senha" name="senha" placeholder="Crie uma senha" required>
                                    <button type="button" class="btn btn-outline-secondary btn-sm show-password-btn" tabindex="-1" onclick="togglePassword('senha', this)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback" id="senha-feedback">
                                    A senha deve conter pelo menos 8 caracteres
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="confirmarSenha" class="form-label">Confirme a senha</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control" id="confirmarSenha" placeholder="Confirme a senha" required>
                                    <button type="button" class="btn btn-outline-secondary btn-sm show-password-btn" tabindex="-1" onclick="togglePassword('confirmarSenha', this)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback" id="confirmarSenha-feedback">
                                    As senhas não coincidem
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="cpf" class="form-label">CPF</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                    <input type="text" class="form-control" id="cpf" name="cpf" placeholder="Digite seu CPF" required>
                                </div>
                            </div>
                        </div>
                        <!-- Coluna 2 - Contato -->
                        <div class="form-col">
                            <h5 class="form-section-title"><i class="fas fa-address-book me-2"></i>Contato</h5>
                            <div class="form-group mb-3">
                                <label for="telefone" class="form-label">Telefone</label>
                                <div class="input-group">
                                    <span class="input-group-text">+55</span>
                                    <input type="text" class="form-control" id="telefone" name="telefone" placeholder="(XX) 9XXXX-XXXX" maxlength="15">
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="genero" class="form-label">Gênero</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
                                    <select class="form-select" id="genero" name="genero" required>
                                        <option value="" selected disabled>Selecione</option>
                                        <option value="Masculino">Masculino</option>
                                        <option value="Feminino">Feminino</option>
                                        <option value="Outro">Outro</option>
                                        <option value="Prefiro não informar">Prefiro não informar</option>
                                    </select>
                                </div>
                            </div>
                            <!-- Espaço reservado -->
                            <div class="form-group mb-3" style="visibility: hidden;">
                                <label class="form-label">Espaço</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-question"></i></span>
                                    <input type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group mb-3" style="visibility: hidden;">
                                <label class="form-label">Espaço</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-question"></i></span>
                                    <input type="text" class="form-control" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Endereço Completo -->
                    <h5 class="form-section-title mt-4"><i class="fas fa-home me-2"></i>Endereço Completo</h5>
                    <div class="form-row">
                        <div class="form-group mb-3 col-md-6">
                            <label for="estado" class="form-label">Estado (UF)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                <select class="form-select" id="estado" name="estado">
                                    <option value="" selected disabled>Carregando estados...</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group mb-3 col-md-6">
                            <label for="cidade" class="form-label">Cidade</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-city"></i></span>
                                <select class="form-select" id="cidade" name="cidade" disabled>
                                    <option value="" selected disabled>Selecione um estado primeiro</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group mb-3 col-md-8">
                            <label for="rua" class="form-label">Rua</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-road"></i></span>
                                <input type="text" class="form-control" id="rua" name="rua" placeholder="Digite sua rua">
                            </div>
                        </div>
                        <div class="form-group mb-3 col-md-4">
                            <label for="numero" class="form-label">Número</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-home"></i></span>
                                <input type="number" class="form-control" id="numero" name="numero" placeholder="Nº" min="1">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="complemento" class="form-label">Complemento</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-building"></i></span>
                            <input type="text" class="form-control" id="complemento" name="complemento" placeholder="Apto, bloco, etc.">
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="termos" required>
                            <label class="form-check-label" for="termos">
                                Concordo com os <a href="#" class="text-primary">Termos de Serviço</a> e <a href="#" class="text-primary">Política de Privacidade</a>
                            </label>
                        </div>
                    </div>
                    <div class="d-grid gap-3">
                        <button type="submit" class="btn btn-primary btn-lg">Cadastrar</button>
                        <button type="button" class="btn btn-outline-secondary btn-lg" onclick="window.location.href='/perfil'">
                            Já tenho uma conta
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="footer mt-auto">
        <div class="copyright text-center">
            <small>© <%= new Date().getFullYear() %> Todos os direitos reservados</small>
        </div>
    </footer>

    <script>
        function togglePassword(inputId, btn) {
            const input = document.getElementById(inputId);
            const icon = btn.querySelector('i');
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = "password";
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        function toggleAllPasswords(btn) {
            // Seleciona todos os campos de senha visíveis no formulário
            const form = btn.closest('form');
            const passwordInputs = form.querySelectorAll('input[type="password"], input[type="text"]');
            let show = false;
            // Se algum campo está como password, vamos mostrar todos
            passwordInputs.forEach(input => {
                if (input.type === "password") show = true;
            });
            passwordInputs.forEach(input => {
                if (show) {
                    input.type = "text";
                } else {
                    input.type = "password";
                }
            });
            // Troca todos os ícones juntos
            const icons = form.querySelectorAll('.show-password-btn i');
            icons.forEach(icon => {
                if (show) {
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        }
    </script>
    <script src="/javascripts/cadastro.js"></script>
    <script src="/javascripts/cart.js"></script>
</body>
</html>