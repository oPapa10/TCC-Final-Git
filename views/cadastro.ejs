    <!-- Conteúdo Principal -->
    <main class="flex-grow-1 d-flex align-items-center">
        <div class="container cadastro-container">
            <div class="cadastro-card">
                <div class="cadastro-header text-center mb-4">
                    <h2 class="cadastro-title">Crie sua conta</h2>
                    <p class="cadastro-subtitle">Preencha os campos abaixo para se cadastrar</p>
                </div>
                <% if (typeof mensagem !== 'undefined' && mensagem) { %>
                  <div class="alert alert-danger text-center"><%= mensagem %></div>
                <% } %>
                <form class="cadastro-form" id="formCadastro" action="/cadastro" method="POST">
                    <div class="form-row">
                        <!-- Coluna 1 - Dados Pessoais -->
                        <div class="form-col">
                            <h5 class="form-section-title"><i class="fas fa-user me-2"></i>Dados Pessoais</h5>
                            <div class="form-group mb-3">
                                <label for="nome" class="form-label">Nome Completo</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome" required>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="email" class="form-label">E-mail</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu e-mail" required>
                                </div>
                                <div id="email-feedback" class="invalid-feedback"></div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="senha" class="form-label">Senha</label>
                                <div class="input-group password-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control password-placeholder-center" id="senha" name="senha" placeholder="Mínimo 8 caracteres" required minlength="8" maxlength="8">
                                    <button type="button" class="btn btn-outline-secondary btn-sm show-password-btn" tabindex="-1" onclick="toggleAllPasswords(this)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback" id="senha-feedback">
                                    A senha deve conter pelo menos 8 caracteres
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="confirmarSenha" class="form-label">Confirme a senha</label>
                                <div class="input-group password-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control password-placeholder-center" id="confirmarSenha" placeholder="Mínimo 8 caracteres" required minlength="8" maxlength="8">
                                    <button type="button" class="btn btn-outline-secondary btn-sm show-password-btn" tabindex="-1" onclick="toggleAllPasswords(this)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback" id="confirmarSenha-feedback">
                                    As senhas não coincidem
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="cpf" class="form-label">CPF</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                    <input type="text" class="form-control" id="cpf" name="cpf" placeholder="Digite seu CPF" maxlength="14" required>
                                </div>
                                <div id="cpf-feedback" class="invalid-feedback"></div>
                            </div>
                        </div>
                        <!-- Coluna 2 - Contato -->
                        <div class="form-col">
                            <h5 class="form-section-title"><i class="fas fa-address-book me-2"></i>Contato</h5>
                            <div class="form-group mb-3">
                                <label for="telefone" class="form-label">Telefone</label>
                                <div class="input-group">
                                    <span class="input-group-text">+55</span>
                                    <input type="text" class="form-control" id="telefone" name="telefone" placeholder="(XX) 9XXXX-XXXX" maxlength="15">
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="genero" class="form-label">Gênero</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
                                    <select class="form-select" id="genero" name="genero" required>
                                        <option value="" selected disabled>Selecione</option>
                                        <option value="Masculino">Masculino</option>
                                        <option value="Feminino">Feminino</option>
                                        <option value="Outro">Outro</option>
                                        <option value="Prefiro não informar">Prefiro não informar</option>
                                    </select>
                                </div>
                            </div>
                            <!-- Espaço reservado -->
                            <div class="form-group mb-3" style="visibility: hidden;">
                                <label class="form-label">Espaço</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-question"></i></span>
                                    <input type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group mb-3" style="visibility: hidden;">
                                <label class="form-label">Espaço</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-question"></i></span>
                                    <input type="text" class="form-control" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Endereço Completo -->
                    <h5 class="form-section-title mt-4"><i class="fas fa-home me-2"></i>Endereço Completo</h5>
                    <div class="form-row">
                        <div class="form-group mb-3 col-md-6">
                            <label for="estado" class="form-label">Estado (UF)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                <select class="form-select" id="estado" name="estado">
                                    <option value="" selected disabled>Carregando estados...</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group mb-3 col-md-6">
                            <label for="cidade" class="form-label">Cidade</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-city"></i></span>
                                <select class="form-select" id="cidade" name="cidade" disabled>
                                    <option value="" selected disabled>Selecione um estado primeiro</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group mb-3 col-md-8">
                            <label for="rua" class="form-label">Rua</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-road"></i></span>
                                <input type="text" class="form-control" id="rua" name="rua" placeholder="Digite sua rua">
                            </div>
                        </div>
                        <div class="form-group mb-3 col-md-4">
                            <label for="numero" class="form-label">Número</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-home"></i></span>
                                <input type="number" class="form-control" id="numero" name="numero" placeholder="Nº" min="1">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="complemento" class="form-label">Complemento</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-building"></i></span>
                            <input type="text" class="form-control" id="complemento" name="complemento" placeholder="Apto, bloco, etc.">
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <div class="form-check">
                            <input class="form-check-input termos-borda-preta" type="checkbox" id="termos" required>
                            <label class="form-check-label" for="termos">
                                Concordo com os <a href="#" class="text-primary">Termos de Serviço</a> e <a href="#" class="text-primary">Política de Privacidade</a>
                            </label>
                        </div>
                    </div>
                    <div class="d-grid gap-3">
                        <button type="submit" class="btn btn-primary btn-lg">Cadastrar</button>
                        <button type="button" class="btn btn-outline-secondary btn-lg" onclick="window.location.href='/perfil'">
                            Já tenho uma conta
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="footer mt-auto">
        <div class="copyright text-center">
            <small>© <%= new Date().getFullYear() %> Todos os direitos reservados</small>
        </div>
    </footer>

    <script>
        function togglePassword(inputId, btn) {
            const input = document.getElementById(inputId);
            const icon = btn.querySelector('i');
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = "password";
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        function toggleAllPasswords(btn) {
            const form = btn.closest('form');
            // Seleciona apenas os campos de senha e confirmação
            const passwordInputs = [
                form.querySelector('#senha'),
                form.querySelector('#confirmarSenha')
            ];
            // Se algum campo está como password, vamos mostrar todos
            const show = passwordInputs.some(input => input && input.type === "password");
            passwordInputs.forEach(input => {
                if (input) input.type = show ? "text" : "password";
            });
            // Troca todos os ícones juntos
            const icons = form.querySelectorAll('.show-password-btn i');
            icons.forEach(icon => {
                if (show) {
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        }

document.getElementById('email').addEventListener('blur', function() {
    const email = this.value.trim();
    if (!email) return;
    fetch(`/cadastro/verificar-email?email=${encodeURIComponent(email)}`)
      .then(res => res.json())
      .then(data => {
        const feedback = document.getElementById('email-feedback');
        if (data.existe) {
          feedback.textContent = 'Este e-mail já está cadastrado!';
          feedback.style.display = 'block';
          this.classList.add('is-invalid');
        } else {
          feedback.textContent = '';
          feedback.style.display = 'none';
          this.classList.remove('is-invalid');
        }
      });
});

document.getElementById('cpf').addEventListener('blur', function() {
    const cpf = this.value.trim();
    if (!cpf) return;
    fetch(`/cadastro/verificar-cpf?cpf=${encodeURIComponent(cpf)}`)
      .then(res => res.json())
      .then(data => {
        const feedback = document.getElementById('cpf-feedback');
        if (data.existe) {
          feedback.textContent = 'Este CPF já está cadastrado!';
          feedback.style.display = 'block';
          this.classList.add('is-invalid');
        } else {
          feedback.textContent = '';
          feedback.style.display = 'none';
          this.classList.remove('is-invalid');
        }
      });
});

    // Permite apenas letras, espaços e acentos
function bloquearCaracteresEspeciais(event) {
    const valor = event.target.value;
    // Aceita letras (maiúsculas/minúsculas), acentos e espaço
    event.target.value = valor.replace(/[^A-Za-zÀ-ÿ\s]/g, '');
}

// Lista de IDs dos campos de texto
const camposTexto = [
    'nome', 'rua', 'cidade', 'complemento'
];

// Aplica o filtro em cada campo
camposTexto.forEach(id => {
    const campo = document.getElementById(id);
    if (campo) {
        campo.addEventListener('input', bloquearCaracteresEspeciais);
    }
});

// Permite apenas letras, números e @ no campo de e-mail
document.getElementById('email').addEventListener('input', function(event) {
    const valor = event.target.value;
    // Aceita letras, números, @ e ponto
    event.target.value = valor.replace(/[^A-Za-z0-9@.]/g, '');
});

// Máscara automática para CPF e bloqueio de caracteres especiais
document.getElementById('cpf').addEventListener('input', function(e) {
    // Remove tudo que não é dígito
    let value = this.value.replace(/\D/g, '');

    // Aplica a máscara: 000.000.000-00
    if (value.length > 3) value = value.slice(0, 3) + '.' + value.slice(3);
    if (value.length > 7) value = value.slice(0, 7) + '.' + value.slice(7);
    if (value.length > 11) value = value.slice(0, 11) + '-' + value.slice(11, 13);
    if (value.length > 14) value = value.slice(0, 14); // Limita a 14 caracteres (com máscara)

    this.value = value;
});

(function() {
  var theme = localStorage.getItem('theme');
  if (theme === 'escuro') {
    document.body.classList.add('dark-theme');
  } else {
    document.body.classList.remove('dark-theme');
  }
})();
    </script>
    <script src="/javascripts/cadastro.js"></script>
    <script src="/javascripts/cart.js"></script>
</body>
</html>