    <link rel="stylesheet" href="/stylesheets/cadastro.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/theme.css">
    <style>
        /* Estilo adicional para centralizar o placeholder */
        .password-placeholder-center::placeholder {
            text-align: center;
            opacity: 1; /* Garante que a opacidade seja total */
            color: #6c757d; /* Cor do placeholder para melhor visibilidade */
        }
        
        /* Ajuste para garantir que o texto digitado fique alinhado à esquerda */
        .password-placeholder-center {
            text-align: left;
        }
        
        /* Ajuste para o grupo de input com botão de mostrar senha */
        .input-group.password-group .form-control {
            padding-right: 45px; /* Espaço para o botão de mostrar senha */
        }
    </style>
</head>
<body>
    <!-- Navbar Superior -->
