<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <title>Editar Produto</title>
    <link rel="stylesheet" href="/stylesheets/createItens.css">
</head>
<body>
    <h2>Editar Produto</h2>
    <form action="/produtos/editar/<%= produto.ID %>" method="POST" enctype="multipart/form-data">
        <input type="text" name="nome" value="<%= produto.nome %>" required>
        <input type="number" step="0.01" name="valor" value="<%= produto.valor %>" required>
        <textarea name="descricao"><%= produto.descricao %></textarea>
        <select name="categoria" required>
            <% categorias.forEach(function(cat) { %>
                <option value="<%= cat.ID %>" <%= produto.Categoria_ID == cat.ID ? 'selected' : '' %>><%= cat.nome %></option>
            <% }) %>
        </select>
        <input type="number" name="quantidade" value="<%= produto.estoque %>" required>
        <input type="hidden" name="imagemAtual" value="<%= produto.imagem %>">
        <input type="file" name="imagem">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
    <a href="/seeProduto">Voltar</a>
</body>
</html>