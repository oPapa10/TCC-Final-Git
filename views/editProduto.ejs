<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Produto | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/editProduto.css">
    <link rel="stylesheet" href="/stylesheets/barra_rolagem.css">
</head>
<body>
    <div class="container">
        <div class="header-section">
            <a href="/seeProduto" class="btn-voltar">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
            <h1 class="header-title ms-4">Editar Produto</h1>
        </div>
        <div class="card-edit">
            <form action="/produtos/editar/<%= produto.ID %>" method="POST">
                <!-- Imagem atual -->
                <div class="image-container">
                    <% if (produto.imagem) { %>
                        <img src="<%= produto.imagem %>" alt="Imagem atual do produto" class="current-image">
                        <span class="image-badge">IMAGEM ATUAL</span>
                    <% } else { %>
                        <div class="no-image">
                            <i class="fas fa-box-open"></i>
                        </div>
                        <span class="image-badge">SEM IMAGEM</span>
                    <% } %>
                    <input type="hidden" name="imagemAtual" value="<%= produto.imagem %>">
                </div>
                <!-- Upload de nova imagem -->
                <label class="file-input-label" for="imagem">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <div class="file-input-text">Clique para alterar a imagem ou arraste uma nova</div>
                    <input type="file" id="imagem" name="imagem" accept="image/*" style="display: none;">
                </label>
                <!-- Campos do formulário -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="nome">NOME DO PRODUTO</label>
                            <input type="text" class="form-control" id="nome" name="nome" value="<%= produto.nome %>" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="valor">VALOR (R$)</label>
                            <input type="number" step="0.01" class="form-control" id="valor" name="valor" value="<%= produto.valor %>" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="categoria">CATEGORIA</label>
                            <select class="form-control" id="categoria" name="categoria" required>
                                <% categorias.forEach(function(cat) { %>
                                    <option value="<%= cat.ID %>" <%= produto.Categoria_ID == cat.ID ? 'selected' : '' %>><%= cat.nome %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="cor">COR</label>
                            <input type="text" class="form-control" id="cor" name="cor" value="<%= produto.cor %>">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="tamanho">TAMANHO</label>
                            <input type="text" class="form-control" id="tamanho" name="tamanho" value="<%= produto.tamanho %>">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="peso">PESO</label>
                            <input type="text" class="form-control" id="peso" name="peso" value="<%= produto.peso %>">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="cilindrada">CILINDRADA</label>
                            <input type="text" class="form-control" id="cilindrada" name="cilindrada" value="<%= produto.cilindrada %>">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="potencia">POTÊNCIA</label>
                            <input type="text" class="form-control" id="potencia" name="potencia" value="<%= produto.potencia %>">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="tanque">TANQUE</label>
                            <input type="text" class="form-control" id="tanque" name="tanque" value="<%= produto.tanque %>">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="material">MATERIAL</label>
                            <input type="text" class="form-control" id="material" name="material" value="<%= produto.material %>">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="protecao">PROTEÇÃO</label>
                            <input type="text" class="form-control" id="protecao" name="protecao" value="<%= produto.protecao %>">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="thumbnails">THUMBNAILS (URLs separadas por vírgula)</label>
                            <input type="text" class="form-control" id="thumbnails" name="thumbnails" value="<%= produto.thumbnails %>" placeholder="https://exemplo.com/img1.jpg, https://exemplo.com/img2.jpg">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="thumbnailUpload">Ou selecione uma imagem para thumbnail</label>
                            <input type="file" id="thumbnailUpload" name="thumbnailUpload" accept="image/*" class="form-control">
                        </div>
                        <!-- ESTOQUE não editável aqui -->
                        <div class="form-group">
                            <label class="form-label" for="quantidade">QUANTIDADE EM ESTOQUE</label>
                            <input type="number" class="form-control" id="quantidade" name="quantidade" value="<%= produto.estoque %>" readonly style="background:#f1f3f5;cursor:not-allowed;">
                            <small class="text-muted">O estoque só pode ser alterado na tela de entrada de estoque.</small>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="descricao">DESCRIÇÃO</label>
                            <textarea class="form-control" id="descricao" name="descricao"><%= produto.descricao %></textarea>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn-salvar">
                    <i class="fas fa-save"></i> SALVAR ALTERAÇÕES
                </button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/editProduto.js"></script>
</body>
</html>