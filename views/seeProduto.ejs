<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Produtos Cadastrados | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/seeProduto.css">
    <link rel="stylesheet" href="/stylesheets/barra_rolagem.css">
    
</head>
<body>
    <div class="container">
        <div class="header-section">
            <div class="d-flex align-items-center">
                <a href="/adm" class="btn-voltar">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
                <h2 class="mb-0 ms-3">Produtos Cadastrados</h2>
            </div>
            <a href="/createItens" class="btn btn-novo">
                <i class="fas fa-plus me-2"></i> Novo Produto
            </a>
        </div>

        <div class="search-bar-container mb-3">
            <input type="text" class="form-control search-bar" id="searchProduto" placeholder="Pesquisar produto por nome, categoria ou ID...">
        </div>

        <% if (produtos.length > 0) { %>
            <div class="table-container">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th class="fixed-column-id">ID</th>
                            <th class="fixed-column">Imagem</th>
                            <th>Nome</th>
                            <th>Valor</th>
                            <th>Categoria</th>
                            <th>Cor</th>
                            <th>Tamanho</th>
                            <th>Peso</th>
                            <th>Cilindrada</th>
                            <th>Potência</th>
                            <th>Tanque</th>
                            <th>Material</th>
                            <th>Proteção</th>
                            <th>Estoque</th>
                            <th>Descrição</th>
                            <th>Thumbnails</th>
                            <th class="fixed-column-action">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% produtos.forEach(function(produto) { %>
                            <tr>
                                <td class="fixed-column-id"><%= produto.ID %></td>
                                <td class="fixed-column">
                                    <% if (produto.imagem) { %>
                                        <img src="<%= produto.imagem %>" alt="Imagem do Produto" class="produto-img">
                                    <% } else { %>
                                        <span class="produto-img d-flex align-items-center justify-content-center" style="background:#e0e0e0;">
                                            <i class="fas fa-box-open fa-2x" style="color:#bbb;"></i>
                                        </span>
                                    <% } %>
                                </td>
                                <td><strong><%= produto.nome %></strong></td>
                                <td>R$ <%= produto.valor ? Number(produto.valor).toFixed(2).replace('.', ',') : '0,00' %></td>
                                <td>
                                    <span class="badge-categoria">
                                        <%= produto.categoria_nome || produto.categoria || produto.Categoria_ID %>
                                    </span>
                                </td>
                                <td><%= produto.cor %></td>
                                <td><%= produto.tamanho %></td>
                                <td><%= produto.peso %></td>
                                <td><%= produto.cilindrada %></td>
                                <td><%= produto.potencia %></td>
                                <td><%= produto.tanque %></td>
                                <td><%= produto.material %></td>
                                <td><%= produto.protecao %></td>
                                <td><%= produto.estoque %></td>
                                <td>
                                    <div class="produto-details">
                                        <span><%= produto.descricao %></span>
                                    </div>
                                </td>
                                <td>
                                    <% if (produto.thumbnails) { 
                                        // Se for uma lista separada por vírgula
                                        let thumbs = Array.isArray(produto.thumbnails) ? produto.thumbnails : String(produto.thumbnails).split(',');
                                    %>
                                        <% thumbs.forEach(function(url) { %>
                                            <a href="<%= url.trim() %>" target="_blank">
                                                <img src="<%= url.trim() %>" alt="Thumbnail" style="width:40px;height:40px;object-fit:cover;border-radius:6px;margin:2px;">
                                            </a>
                                        <% }) %>
                                    <% } %>
                                </td>
                                <td class="fixed-column-action">
                                    <div class="action-btns">
                                        <a href="/produtos/editar/<%= produto.ID %>" class="action-btn edit" title="Editar">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <form action="/seeProduto/excluir/<%= produto.ID %>" method="POST" style="display:inline;">
                                            <button type="submit" class="action-btn delete" title="Excluir" onclick="return confirm('Tem certeza que deseja excluir este produto?')">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-box-open fa-3x mb-3" style="color: #dee2e6;"></i>
                <h4>Nenhum produto cadastrado</h4>
                <p class="mb-4">Você ainda não possui produtos cadastrados no sistema.</p>
                <a href="/createItens" class="btn btn-novo">
                    <i class="fas fa-plus me-2"></i> Adicionar Primeiro Produto
                </a>
            </div>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/seeProduto.js"></script>
</body>
</html>