<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Produtos</title>

    <link rel="stylesheet" href="/stylesheets/createItens.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/menu-superior.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/barra_rolagem.css">
</head>
<body>
    <div class="container mt-4">
        <div class="header-section">
            <a href="/admCenterMotos" class="btn-voltar">
                <i class="fas fa-arrow-left"></i> Voltar ao ADM
            </a>
            <h2 class="header-title"><i class="fas fa-box-open me-2"></i>Cadastro de Produtos</h2>
        </div>

        <!-- Alertas -->
        <% if (sucesso) { %>
            <div class="alert-custom alert-success-custom">
                <div class="alert-content">
                    <i class="fas fa-check-circle alert-icon"></i>
                    <div>
                        <h5>Produto cadastrado com sucesso!</h5>
                        <p class="mb-0">O produto foi adicionado ao catálogo.</p>
                    </div>
                </div>
            </div>
        <% } %>

        <form action="/createItens/produtos" method="POST" enctype="multipart/form-data" id="productForm">
            <% 
                // helper para mapear nome da categoria para a chave usada nos botões/js
                function mapKey(nome){
                    const s = (nome||'').toLowerCase();
                    if(s.includes('capacete') || s.includes('cap')) return 'capacete';
                    if(s.includes('vest') || s.includes('roup') || s.includes('tshirt') || s.includes('roupa')) return 'vestuario';
                    if(s.includes('moto')) return 'moto';
                    if(s.includes('óleo')||s.includes('oleo')||s.includes('oil')) return 'oleo';
                    if(s.includes('peça')||s.includes('peca')||s.includes('peças')||s.includes('pecas')) return 'pecas';
                    return 'outros';
                }
            %>

            <!-- CATEGORIAS (botões fixos) -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-tags me-2"></i>Categoria do Produto</h5>
                    <div id="categoriaButtons" class="d-flex flex-wrap">
                        <button type="button" class="btn btn-categoria" data-key="vestuario">
                            <i class="fas fa-tshirt me-2"></i> Vestuário
                        </button>
                        <button type="button" class="btn btn-categoria" data-key="capacete">
                            <i class="fas fa-shield-alt me-2"></i> Capacete
                        </button>
                        <button type="button" class="btn btn-categoria" data-key="moto">
                            <i class="fas fa-motorcycle me-2"></i> Moto
                        </button>
                        <button type="button" class="btn btn-categoria" data-key="oleo">
                            <i class="fas fa-oil-can me-2"></i> Óleo
                        </button>
                        <button type="button" class="btn btn-categoria" data-key="pecas">
                            <i class="fas fa-cog me-2"></i> Peças
                        </button>
                        <button type="button" class="btn btn-categoria" data-key="outros">
                            <i class="fas fa-ellipsis-h me-2"></i> Outros / Geral
                        </button>
                    </div>
                </div>
            </div>

            <!-- INFORMAÇÕES BÁSICAS (oculto até escolher categoria) -->
            <div class="card" id="info-basicas" style="display:none;">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-info-circle me-2"></i>Informações Básicas</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="nome" class="form-label">Nome do Produto</label>
                            <input type="text" id="nome" name="nome" class="form-control" placeholder="Ex: Jaqueta X, Capacete ASX..." required>
                            <div class="invalid-feedback">Por favor, informe o nome do produto.</div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="valor" class="form-label">Valor (R$)</label>
                            <input type="number" id="valor" name="valor" class="form-control" step="0.01" min="0" placeholder="0,00" required>
                            <div class="invalid-feedback">Por favor, informe um valor válido.</div>
                        </div>

                        <!-- AQUI: mostra as categorias cadastradas do banco -->
                        <div class="col-md-3 mb-3">
                            <label for="categoria_id" class="form-label">Categoria (catálogo)</label>
                            <select id="categoria_id" name="categoria_id" class="form-control" required>
                                <option value="">Selecione uma categoria cadastrada</option>
                                <% if (typeof categorias !== 'undefined' && categorias.length) { %>
                                    <% categorias.forEach(function(cat){ %>
                                        <option value="<%= cat.ID %>" data-key="<%= mapKey(cat.nome) %>"><%= cat.nome %></option>
                                    <% }) %>
                                <% } %>
                            </select>
                            <input type="hidden" id="categoria_key" name="categoria_key" value="">
                        </div>
                    </div>
                </div>
            </div>

            <!-- CAMPOS DINÂMICOS -->
            <div class="card" id="card-especificacoes" style="display:none;">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-list-alt me-2"></i>Especificações do Produto</h5>
                    <div id="campos-dinamicos"></div>
                </div>
            </div>

            <!-- IMAGENS -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-images me-2"></i>Imagens do Produto</h5>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label file-input-required">Imagem Principal</label>
                            <div class="file-input-container">
                                <input type="file" id="imagemFile" name="imagem" accept="image/*" class="form-control mb-3">
                                <div class="file-input-label">Clique para selecionar a imagem principal</div>
                                <small class="text-muted d-block mb-3">Formatos: JPG, PNG, WEBP (Máx. 5MB)</small>

                                <label class="form-label mt-3">Ou informe o link da imagem principal</label>
                                <input type="url" id="imagemLink" name="imagemLink" class="form-control" placeholder="https://exemplo.com/imagem.jpg">
                                <small class="text-muted d-block mt-2">Se informar link, o upload será desativado e vice-versa.</small>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label">Thumbnails (miniaturas)</label>
                            <div class="file-input-container">
                                <label class="form-label">URLs (separe por vírgula)</label>
                                <input type="text" id="thumbnails" name="thumbnails" class="form-control mb-3" placeholder="https://exemplo.com/img1.jpg, https://exemplo.com/img2.jpg">

                                <label class="form-label mt-3">Ou selecione arquivo(s) para thumbnail</label>
                                <input type="file" id="thumbnailUpload" name="thumbnailUpload" accept="image/*" class="form-control" multiple>
                                <small class="text-muted d-block mt-2">URLs e uploads podem ser usados simultaneamente; upload será priorizado se presente.</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Cadastrar Produto
            </button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/createItens.js"></script>
</body>
</html>