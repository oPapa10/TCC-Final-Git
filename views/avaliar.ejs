<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Avaliar Produto</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/index.css"/>
    <link rel="stylesheet" href="/stylesheets/theme.css"/>
    <link rel="stylesheet" href="/stylesheets/avaliar.css"/>
    <link rel="stylesheet" href="/stylesheets/footer.css"/>
    <link rel="stylesheet" href="/stylesheets/menu-superior.css"/>
</head>
<body>
    <%- include('partials/navbar', { usuario: usuario }) %>
    <main class="container mt-5 pt-5">
        <div class="card mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h3 class="mb-4">Avalie o Produto</h3>
                
                <!-- Preview do Produto (se disponível) -->
                <div class="product-preview">
                    <img src="<%= produtoImagem || '/images/product-placeholder.jpg' %>" alt="Produto" id="productImage">
                    <div class="product-preview-info">
                        <h5 id="productName"><%= produtoNome || 'Nome do Produto' %></h5>
                        <p id="productCategory"><%= produtoCategoria || 'Categoria do Produto' %></p>
                    </div>
                </div>
                
                <% if (typeof erro !== 'undefined' && erro) { %>
    <div class="alert alert-danger text-center mb-3"><%= erro %></div>
<% } %>
                
                <form action="/avaliacao/enviar" method="POST">
                    <input type="hidden" name="produtoId" value="<%= produtoId %>">
                    
                    <!-- Sistema de Estrelas Interativo -->
                    <div class="mb-4">
                        <label class="form-label">Sua Avaliação:</label>
                        <div class="rating-container">
                            <div class="rating-stars">
                                <input type="radio" id="star5" name="estrela" value="5" required>
                                <label for="star5"><i class="fas fa-star"></i></label>
                                <input type="radio" id="star4" name="estrela" value="4">
                                <label for="star4"><i class="fas fa-star"></i></label>
                                <input type="radio" id="star3" name="estrela" value="3">
                                <label for="star3"><i class="fas fa-star"></i></label>
                                <input type="radio" id="star2" name="estrela" value="2">
                                <label for="star2"><i class="fas fa-star"></i></label>
                                <input type="radio" id="star1" name="estrela" value="1">
                                <label for="star1"><i class="fas fa-star"></i></label>
                            </div>
                            <div class="rating-text" id="ratingText">Selecione uma nota</div>
                        </div>
                    </div>
                    
                    <!-- Comentário -->
                    <div class="mb-4">
                        <label class="form-label">Comentário:</label>
                        <textarea name="descricao" class="form-control" rows="4" placeholder="Compartilhe sua experiência com este produto..." required></textarea>
                        <div class="form-text">Sua avaliação ajuda outros clientes a fazerem melhores escolhas.</div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary mt-3">
                        <i class="fas fa-paper-plane me-2"></i>Enviar Avaliação
                    </button>
                    
                    <a href="javascript:history.back()" class="btn btn-outline-secondary mt-3 w-100">
                        <i class="fas fa-arrow-left me-2"></i>Voltar
                    </a>
                </form>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script>
        // Sistema de estrelas interativo
        document.addEventListener('DOMContentLoaded', function() {
            const stars = document.querySelectorAll('.rating-stars input');
            const ratingText = document.getElementById('ratingText');
            
            // Textos para cada avaliação
            const ratingTexts = {
                1: "1 - Produto ruim",
                2: "2 - Produto regular",
                3: "3 - Produto razoável",
                4: "4 - Boa qualidade",
                5: "5 - Excelente produto"
            };
            
            stars.forEach(star => {
                star.addEventListener('change', function() {
                    ratingText.textContent = ratingTexts[this.value];
                    ratingText.classList.add('rating-selected');
                });
                
                star.addEventListener('mouseenter', function() {
                    ratingText.textContent = ratingTexts[this.value];
                });
            });
            
            // Reset do texto quando o mouse sai das estrelas
            document.querySelector('.rating-stars').addEventListener('mouseleave', function() {
                const selected = document.querySelector('.rating-stars input:checked');
                if (!selected) {
                    ratingText.textContent = "Selecione uma nota";
                    ratingText.classList.remove('rating-selected');
                }
            });
            
            // Verificar se há tema salvo
            const theme = localStorage.getItem('theme');
            if (theme === 'escuro') {
                document.body.classList.add('dark-theme');
            }
        });
    </script>
</body>
</html>