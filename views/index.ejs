 <!-- Carrossel de Promoções - Versão Consistente -->
<% if (promocoes && promocoes.length > 0) { %>
<div class="container-fluid px-0">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="promo-carousel-container">
                <div id="promoCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <% promocoes.forEach(function(promo, idx) { %>
                          <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
                            <div class="promo-carousel-item">
                              <div class="promo-image-container">
                                <img src="<%= promo.imagem %>" class="promo-image" alt="<%= promo.produto_nome %>">
                              </div>
                              <div class="promo-info">
                                <h3 class="promo-title"><%= promo.produto_nome %></h3>
                                <div class="promo-price-container">
                                    <span class="original-price">
                                        R$ <%= Number(promo.valor_real).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %>
                                    </span>
                                    <span class="discounted-price">
                                        R$ <%= Number(promo.valor_promocional).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %>
                                    </span>
                                    <% const discount = Math.round((1 - promo.valor_promocional/promo.valor_real)*100); %>
                                    <% if (discount > 0) { %>
                                        <span class="discount-badge"><%= discount %>% OFF</span>
                                    <% } %>
                                </div>
                                <% if (promo.descricao) { %>
                                    <p class="promo-description"><%= promo.descricao %></p>
                                <% } %>
                                <% if (promo.data_fim) { %>
                                  <div class="promo-timer text-danger fw-bold mb-2" 
                                       data-fim="<%= formatLocalDateTime(promo.data_fim) %>">
                                    <i class="fas fa-clock me-1"></i>
                                    <span class="timer-text">Carregando...</span>
                                  </div>
                                <% } %>
                                <a href="/produtos/p/<%= promo.slug %>" class="btn promo-button">
                                    Ver Oferta <i class="fas fa-arrow-right ms-2"></i>
                                </a>
                              </div>
                            </div>
                          </div>
                        <% }) %>
                    </div>
                    <% if (promocoes.length > 1) { %>
                        <!-- Setas -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Próximo</span>
                        </button>
                        <!-- Bolinhas -->
                        <div class="carousel-indicators">
                            <% promocoes.forEach(function(promo, idx) { %>
                                <button type="button" data-bs-target="#promoCarousel" data-bs-slide-to="<%= idx %>" class="<%= idx === 0 ? 'active' : '' %>" aria-current="<%= idx === 0 ? 'true' : 'false' %>" aria-label="Slide <%= idx+1 %>"></button>
                            <% }) %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>

    <div id="searchMessage" class="container text-center my-3" style="display: none;">
        <div class="alert alert-custom mb-0">Nenhum produto encontrado para sua pesquisa.</div>
