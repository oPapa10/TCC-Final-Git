<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Menu de Produtos</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/index.css"/>
    <link rel="stylesheet" href="/stylesheets/menu-superior.css"/>
    <link rel="stylesheet" href="/stylesheets/footer.css"/>
    <link rel="stylesheet" href="/stylesheets/theme.css">
    <link rel="stylesheet" href="/stylesheets/barra_rolagem.css">
   
</head>
    <%
    function formatLocalDateTime(date) {
        if (!date) return '';
        let d = (typeof date === 'string') ? new Date(date) : date;
        let year = d.getFullYear();
        let month = (d.getMonth() + 1).toString().padStart(2, '0');
        let day = d.getDate().toString().padStart(2, '0');
        let hour = d.getHours().toString().padStart(2, '0');
        let min = d.getMinutes().toString().padStart(2, '0');
        let sec = d.getSeconds().toString().padStart(2, '0');
        return `${year}-${month}-${day}T${hour}:${min}:${sec}`;
    }
    %>
<body>
    <!-- Navbar Superior (partial) - aqui mostramos search + admin apenas no index -->
    <%- include('partials/navbar', { usuario: usuario, showSearch: true, showAdmin: true }) %>

    <% if (typeof msg !== 'undefined' && msg === 'avaliacao') { %>
     <div class="alert alert-success text-center mt-3">
    Você tem produtos disponíveis para avaliação! <a href="/avaliacao" class="btn btn-sm btn-primary ms-2">Avaliar agora</a>
 </div>
    <% } %>

    <!-- Navbar de Categorias -->
    <nav class="navbar navbar-expand-lg navbar-dark" id="navbar2">
        <div class="container-fluid">
            <div class="navbar-nav mx-auto flex-row flex-nowrap align-items-center" id="categorias-scroll">
                <button class="nav-link btn-category" onclick="filterProducts('', this)">Mostrar Todos</button>
                <% if (categorias && categorias.length > 0) { %>
                    <% categorias.forEach(function(cat) { %>
                        <button class="nav-link btn-category" onclick="filterProducts('<%= cat.nome %>', this)"><%= cat.nome %></button>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </nav>

 <!-- Carrossel de Promoções - Versão Consistente -->
<% if (promocoes && promocoes.length > 0) { %>
<div class="container-fluid px-0">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="promo-carousel-container">
                <div id="promoCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <% promocoes.forEach(function(promo, idx) { %>
                          <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
                            <div class="promo-carousel-item">
                              <div class="promo-image-container">
                                <img src="<%= promo.imagem %>" class="promo-image" alt="<%= promo.produto_nome %>">
                              </div>
                              <div class="promo-info">
                                <h3 class="promo-title"><%= promo.produto_nome %></h3>
                                <div class="promo-price-container">
                                    <span class="original-price">
                                        R$ <%= Number(promo.valor_real).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %>
                                    </span>
                                    <span class="discounted-price">
                                        R$ <%= Number(promo.valor_promocional).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %>
                                    </span>
                                    <% const discount = Math.round((1 - promo.valor_promocional/promo.valor_real)*100); %>
                                    <% if (discount > 0) { %>
                                        <span class="discount-badge"><%= discount %>% OFF</span>
                                    <% } %>
                                </div>
                                <% if (promo.descricao) { %>
                                    <p class="promo-description"><%= promo.descricao %></p>
                                <% } %>
                                <% if (promo.data_fim) { %>
                                  <div class="promo-timer text-danger fw-bold mb-2" 
                                       data-fim="<%= formatLocalDateTime(promo.data_fim) %>">
                                    <i class="fas fa-clock me-1"></i>
                                    <span class="timer-text">Carregando...</span>
                                  </div>
                                <% } %>
                                <a href="/produtos/p/<%= promo.slug %>" class="btn promo-button d-none d-md-inline-block">
                                    Ver Oferta <i class="fas fa-arrow-right ms-2"></i>
                                </a>
                              </div>

                              <!-- link overlay para mobile: cobre todo o slide e leva para o produto -->
                              <a href="/produtos/p/<%= promo.slug %>" class="promo-overlay-link d-md-none" aria-hidden="true"></a>

                            </div>
                          </div>
                        <% }) %>
                    </div>
                    <% if (promocoes.length > 1) { %>
                        <!-- Setas -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Próximo</span>
                        </button>
                        <!-- Bolinhas -->
                        <div class="carousel-indicators">
                            <% promocoes.forEach(function(promo, idx) { %>
                                <button type="button" data-bs-target="#promoCarousel" data-bs-slide-to="<%= idx %>" class="<%= idx === 0 ? 'active' : '' %>" aria-current="<%= idx === 0 ? 'true' : 'false' %>" aria-label="Slide <%= idx+1 %>"></button>
                            <% }) %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>

    <div id="searchMessage" class="container text-center my-3" style="display: none;">
        <div class="alert alert-custom mb-0">Nenhum produto encontrado para sua pesquisa.</div>
    </div>

    <!-- Grid de Produtos (dinâmico) -->
    <div id="produtos" class="container mt-5">
        <div class="row">
            <% if (produtos && produtos.length > 0) { %>
                <% produtos.forEach(function(produto) { %>
                    <div class="col-6 col-md-3 mb-4 product-item <%= (produto.categoria_nome ? produto.categoria_nome.normalize('NFD').replace(/[\u0300-\u036f]/g, '').replace(/\s+/g, '-').toLowerCase().trim() : 'sem-categoria') %>">
                        <div class="card product-card"
                            data-product-name="<%= produto.nome %>"
                            data-product-price="<%= produto.valor %>"
                            data-product-image="<%= produto.imagem %>"
                            data-product-thumbnails='<%= produto.thumbnails || "[]" %>'
                            data-product-description="<%= produto.descricao %>"
                            data-product-details='<%= produto.detalhes || "[]" %>'>
                            <img src="<%= produto.imagem %>" class="card-img-top" alt="<%= produto.nome %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= produto.nome %></h5>
                                <p class="card-text text-clamp-2"><%= produto.descricao %></p>
                                <% if (produto.valor_promocional) { %>
                                    <p class="price">
                                      <span class="text-danger fw-bold" style="margin-left:8px;">
                                        R$ <%= Number(produto.valor_promocional).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %>
                                      </span>
                                      <span class="text-muted text-decoration-line-through" style="font-size:0.95em; color:#b0b0b0; font-weight:500;">
                                        R$ <%= Number(produto.valor).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %>
                                      </span>
                                    </p>
                                  <% } else { %>
                                    <p class="price">
                                      R$ <%= Number(produto.valor).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %>
                                    </p>
                                  <% } %>
                                <a href="/produtos/p/<%= produto.slug %>" class="stretched-link product-link"></a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p>Nenhum produto encontrado.</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Mensagem do Carrinho -->
    <div id="cartMessage" class="cart-message">Produto adicionado ao carrinho!</div>

    <!-- Footer -->
    <footer id="index-footer" class="footer mt-auto">
         <div class="container">
             <div class="row justify-content-center text-center">
                 <div class="col-md-4 mb-4">
                     <h4 class="mb-3 border-bottom pb-2">Contato</h4>
                     <ul class="list-unstyled">
                         <li class="mb-2">
                             <a href="#"><i class="fab fa-whatsapp me-2"></i>(48) 99850-3648</a>
                         </li>
                         <li class="mb-2">
                             <a href="https://www.instagram.com/center.motos1/" target="_blank" rel="noopener noreferrer">
                                 <i class="fab fa-instagram me-2"></i>Instagram
                             </a>
                         </li>
                         <li class="mb-2">
                             <a href="https://www.facebook.com/centermotossombrio/" target="_blank" rel="noopener noreferrer">
                                 <i class="fab fa-facebook me-2"></i>Facebook
                             </a>
                         </li>
                     </ul>
                 </div>
                 <div class="col-md-4 mb-4">
                     <h4 class="mb-3 border-bottom pb-2">Informações</h4>
                     <ul class="list-unstyled">
                 <li class="mb-2"><a href="/privacidade">Política de Privacidade</a></li>
                 <li class="mb-2"><a href="/termos-uso">Termos de Uso</a></li>
                 <li class="mb-2"><a href="/sobre-nos">Sobre Nós</a></li>
                     </ul>
                 </div>
             </div>
             <div class="copyright text-center">
                 <small>© <%= new Date().getFullYear() %> Todos os direitos reservados</small>
             </div>
         </div>
     </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script src="/javascripts/index.js"></script>
    <script src="/javascripts/cart.js"></script>
    <script>
function filterProducts(categoria, btn) {
    var categoriaClasse = categoria
        .normalize('NFD')
        .replace(/[\u0300-\u036f]/g, '')
        .replace(/\s+/g, '-')
        .toLowerCase()
        .trim();

    // Se já está selecionada, desativa tudo e mostra todos sem hover
    if (btn && btn.classList.contains('active')) {
        document.querySelectorAll('.product-item').forEach(function(item) {
            item.style.display = '';
        });
        document.querySelectorAll('.btn-category').forEach(function(b) {
            b.classList.remove('active');
        });
        // Não ativa nenhum botão (nem o "Mostrar Todos")
        return;
    }

    // Filtra normalmente
    document.querySelectorAll('.product-item').forEach(function(item) {
        if (!categoria || item.classList.contains(categoriaClasse)) {
            item.style.display = '';
        } else {
            item.style.display = 'none';
        }
    });
    document.querySelectorAll('.btn-category').forEach(function(b) {
        b.classList.remove('active');
    });
    if (btn) btn.classList.add('active');
}

(function() {
  var theme = localStorage.getItem('theme');
  if (theme === 'escuro') {
    document.body.classList.add('dark-theme');
  } else {
    document.body.classList.remove('dark-theme');
  }
})();

if (window.location.search.includes('sucesso=1')) {
    alert('Compra efetuada com sucesso!');
}
</script>

</body>
</html>