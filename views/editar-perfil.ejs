    <main class="container cadastro-container py-5">
        <div class="cadastro-card mx-auto p-4" style="max-width: 650px;">
            <div class="text-center mb-4">
                <i class="fas fa-user-circle fa-4x text-primary mb-2"></i>
                <h2 class="cadastro-title mb-1">Editar Perfil</h2>
                <p class="text-muted">Atualize suas informações pessoais</p>
            </div>
            <form action="/editar-perfil" method="POST" class="cadastro-form">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="nome" class="form-label">Nome Completo</label>
                        <input type="text" class="form-control" id="nome" name="nome" value="<%= usuario.nome %>" required>
                    </div>
                    <div class="col-md-6">
                        <label for="email" class="form-label">E-mail</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= usuario.email %>" required>
                    </div>
                    <div class="col-md-6">
                        <label for="telefone" class="form-label">Telefone</label>
                        <input type="text" class="form-control" id="telefone" name="telefone" value="<%= usuario.telefone %>">
                    </div>
                    <div class="col-md-6">
                        <label for="cpf" class="form-label">CPF</label>
                        <input type="text" class="form-control" id="cpf" name="cpf" value="<%= usuario.CPF %>" readonly>
                    </div>
                    <div class="col-md-6">
                        <label for="genero" class="form-label">Gênero</label>
                        <select class="form-select" id="genero" name="genero">
                            <option value="Masculino" <%= usuario.genero === 'Masculino' ? 'selected' : '' %>>Masculino</option>
                            <option value="Feminino" <%= usuario.genero === 'Feminino' ? 'selected' : '' %>>Feminino</option>
                            <option value="Outro" <%= usuario.genero === 'Outro' ? 'selected' : '' %>>Outro</option>
                            <option value="Prefiro não informar" <%= usuario.genero === 'Prefiro não informar' ? 'selected' : '' %>>Prefiro não informar</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="estado" class="form-label">Estado</label>
                        <input type="text" class="form-control" id="estado" name="estado" value="<%= usuario.estado %>">
                    </div>
                    <div class="col-md-6">
                        <label for="cidade" class="form-label">Cidade</label>
                        <input type="text" class="form-control" id="cidade" name="cidade" value="<%= usuario.cidade %>">
                    </div>
                    <div class="col-md-6">
                        <label for="rua" class="form-label">Rua</label>
                        <input type="text" class="form-control" id="rua" name="rua" value="<%= usuario.rua %>">
                    </div>
                    <div class="col-md-4">
                        <label for="numero" class="form-label">Número</label>
                        <input type="text" class="form-control" id="numero" name="numero" value="<%= usuario.numero %>">
                    </div>
                    <div class="col-md-8">
                        <label for="complemento" class="form-label">Complemento</label>
                        <input type="text" class="form-control" id="complemento" name="complemento" value="<%= usuario.complemento %>">
                    </div>
                </div>
                <div class="d-grid gap-3 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-save me-2"></i>Salvar Alterações</button>
                    <a href="/perfil" class="btn btn-outline-secondary btn-lg"><i class="fas fa-times me-2"></i>Cancelar</a>
                </div>
            </form>
        </div>
    </main>
    <footer class="footer mt-auto">
        <div class="copyright text-center">
            <small>© <%= new Date().getFullYear() %> Todos os direitos reservados</small>
        </div>
    </footer>
    <script>
        // Ativa modo escuro se necessário
        (function() {
            var theme = localStorage.getItem('theme');
            if (theme === 'escuro') {
                document.body.classList.add('dark-theme');
            } else {
                document.body.classList.remove('dark-theme');
            }
        })();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>