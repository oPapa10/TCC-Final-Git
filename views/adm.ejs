<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Área do Administrador - Center Motos</title>
    <link rel="stylesheet" href="/stylesheets/adm.css">
    <link rel="stylesheet" href="/stylesheets/barra_rolagem.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <!-- Header -->
        <div class="admin-header">
            <div class="header-content">
                <div class="logo-section">
                    <div class="logo-icon">
                        <i class="fas fa-motorcycle"></i>
                    </div>
                    <div class="logo-text">
                        <h1>Center Motos</h1>
                        <p>Painel Administrativo</p>
                    </div>
                </div>
                <form action="/admin/logout" method="POST" class="logout-form">
                    <button type="submit" class="btn-logout">
                        <i class="fas fa-sign-out-alt"></i>
                        Sair do ADM
                    </button>
                </form>
            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Welcome Section -->
            <div class="welcome-section">
                <h2>Bem-vindo ao Painel Administrativo</h2>
                <p>Gerencie todos os aspectos da sua loja em um só lugar</p>
            </div>

            <!-- Quick Stats no Topo -->
            <div class="quick-stats-top">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-tags"></i>
                    </div>
                    <div class="stat-info">
                        <h3><%= promocoesAtivas || 0 %></h3>
                        <p>Promoções Ativas</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stat-info">
                        <h3><%= produtosEstoqueBaixo || 0 %></h3>
                        <p>Produtos com Estoque Baixo</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-info">
                        <h3><%= vendasPendentes || 0 %></h3>
                        <p>Vendas Pendentes</p>
                    </div>
                </div>
            </div>

            <!-- Dashboard Grid Reorganizado -->
            <div class="dashboard-grid">
                <!-- Grupo 1: Entrada de Estoque + Controle de Vendas -->
                <div class="dashboard-group">
                    <div class="admin-card card-primary">
                        <div class="card-icon">
                            <i class="fas fa-box-open"></i>
                        </div>
                        <div class="card-content">
                            <h4>Entrada de Estoque</h4>
                            <p>Controle e atualize o estoque dos produtos</p>
                        </div>
                        <button class="card-button" onclick="window.location.href='/entradaEstoque'">
                            Acessar <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>

                    <div class="admin-card card-warning">
                        <div class="card-icon">
                            <i class="fas fa-receipt"></i>
                        </div>
                        <div class="card-content">
                            <h4>Controle de Vendas</h4>
                            <p>Monitore e gerencie todas as vendas</p>
                        </div>
                        <button class="card-button" onclick="window.location.href='/adm/vendas'">
                            Acessar <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Grupo 2: Ver Produtos + Cadastrar Promoção -->
                <div class="dashboard-group">
                    <div class="admin-card card-info">
                        <div class="card-icon">
                            <i class="fas fa-eye"></i>
                        </div>
                        <div class="card-content">
                            <h4>Ver Produtos</h4>
                            <p>Visualize e gerencie todos os produtos</p>
                        </div>
                        <button class="card-button" onclick="window.location.href='/seeProduto'">
                            Acessar <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>

                    <div class="admin-card card-accent">
                        <div class="card-icon">
                            <i class="fas fa-tag"></i>
                        </div>
                        <div class="card-content">
                            <h4>Cadastrar Promoção</h4>
                            <p>Crie e gerencie promoções especiais</p>
                        </div>
                        <button class="card-button" onclick="window.location.href='/cadastrarPromocao'">
                            Acessar <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Grupo 3: Cadastrar Item + Cadastrar Categoria -->
                <div class="dashboard-group">
                    <div class="admin-card card-success">
                        <div class="card-icon">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <div class="card-content">
                            <h4>Cadastrar Item</h4>
                            <p>Adicione novos produtos ao catálogo</p>
                        </div>
                        <button class="card-button" onclick="window.location.href='/createItens'">
                            Acessar <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>

                    <div class="admin-card card-secondary">
                        <div class="card-icon">
                            <i class="fas fa-folder"></i>
                        </div>
                        <div class="card-content">
                            <h4>Cadastrar Categoria</h4>
                            <p>Organize produtos em categorias</p>
                        </div>
                        <button class="card-button" onclick="window.location.href='/createCategoria'">
                            Acessar <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="admin-footer">
            <div class="footer-content">
                <p>&copy; 2025 Center Motos. Todos os direitos reservados.</p>
            </div>  
        </div>
    </div>

    <script>
        // Efeito adicional de confirmação ao sair
        document.addEventListener('DOMContentLoaded', function() {
            const logoutBtn = document.querySelector('.btn-logout');
            const form = logoutBtn.closest('form');
            
            form.addEventListener('submit', function(e) {
                if (!confirm('Tem certeza que deseja sair da área administrativa?')) {
                    e.preventDefault();
                }
            });

            // Adiciona efeitos de hover nos cards
            const cards = document.querySelectorAll('.admin-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Atualiza estatísticas em tempo real (exemplo)
            function updateStats() {
                // Aqui você pode adicionar chamadas AJAX para atualizar as estatísticas
                console.log('Atualizando estatísticas...');
            }

            // Atualiza a cada 30 segundos
            setInterval(updateStats, 30000);
        });
    </script>
</body>
</html>