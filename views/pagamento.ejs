<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Pagamento</title>
    <link rel="stylesheet" href="/stylesheets/pagamento.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link rel="stylesheet" href="/stylesheets/theme.css">
    <link rel="stylesheet" href="/stylesheets/menu-superior.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a2d04c1f7a.js" crossorigin="anonymous"></script>
</head>
<body class="d-flex flex-column min-vh-100">
    <%- include('partials/navbar') %>

    <main class="flex-fill pagamento-container">
        <div class="pagamento-card shadow-lg">
            <h2 class="text-center text-primary mb-4">
                <i class="fa-solid fa-wallet me-2"></i>Escolha sua forma de pagamento
            </h2>

            <!-- Abas -->
            <ul class="nav nav-tabs justify-content-center" id="pagamentoTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pix-tab" data-bs-toggle="tab" data-bs-target="#pix" type="button" role="tab" aria-controls="pix" aria-selected="true">
                        <i class="fa-solid fa-qrcode me-1"></i> PIX
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="cartao-tab" data-bs-toggle="tab" data-bs-target="#cartao" type="button" role="tab" aria-controls="cartao" aria-selected="false">
                        <i class="fa-solid fa-credit-card me-1"></i> Cartão
                    </button>
                </li>
            </ul>

            <div class="tab-content mt-4" id="pagamentoTabsContent">
                <!-- Aba PIX -->
                <div class="tab-pane fade show active" id="pix" role="tabpanel" aria-labelledby="pix-tab">
                    <div class="pix-container">
                        <p class="mb-1">Valor a pagar:</p>
                        <h3 class="mb-3 text-success">R$ <%= Number(valor).toLocaleString('pt-BR', {minimumFractionDigits:2}) %></h3>

                        <!-- Lista de itens (se houver) -->
                        <% if (itens && itens.length) { %>
                          <div class="mb-3 pagamento-itens-list">
                            <% itens.forEach(function(it){ %>
                              <div class="d-flex align-items-center mb-2">
                                <img src="<%= it.imagem %>" style="width:56px;height:56px;object-fit:cover;border-radius:6px;margin-right:10px;">
                                <div class="flex-fill">
                                  <div class="fw-bold"><%= it.nome %></div>
                                  <div class="small text-muted">Qtd: <%= it.quantidade %> × R$ <%= Number(it.precoUnitario).toLocaleString('pt-BR', {minimumFractionDigits:2}) %> = <strong>R$ <%= Number(it.lineTotal).toLocaleString('pt-BR', {minimumFractionDigits:2}) %></strong></div>
                                </div>
                              </div>
                            <% }) %>
                          </div>
                        <% } %>

                        <div class="pix-qrcode">
                            <img src="<%= qrCodeImage %>" alt="QR Code PIX" width="220" height="220" class="rounded shadow-sm">
                        </div>
                        <p class="mb-2">Escaneie o QR Code ou copie o código abaixo:</p>
                        <textarea class="pix-copiaecola" readonly onclick="this.select()"><%= payload %></textarea>

                        <form action="/pagamento/compraConfirmacao" method="POST" class="mt-3">
                            <input type="hidden" name="valor" value="<%= valor %>">
                            <input type="hidden" name="descricao" value="<%= descricao %>">
                            <!-- envia itens ou fallback para produto único (quando vem via ?produtoId=...) -->
                            <% if (itens && itens.length) { %>
                              <% itens.forEach(function(it, idx){ %>
                                <input type="hidden" name="itens[<%= idx %>][produtoId]" value="<%= it.produtoId %>">
                                <input type="hidden" name="itens[<%= idx %>][quantidade]" value="<%= it.quantidade %>">
                              <% }) %>
                            <% } else if (typeof produtoId !== 'undefined' && produtoId) { %>
                              <input type="hidden" name="produtoId" value="<%= produtoId %>">
                              <input type="hidden" name="quantidade" value="<%= quantidade || 1 %>">
                            <% } %>
                             <button type="submit" class="btn btn-success w-100 mt-2">
                                 <i class="fa fa-check-circle me-2"></i>Confirmar Pedido (PIX)
                             </button>
                         </form>
                    </div>
                </div>

                <!-- Aba Cartão -->
                <div class="tab-pane fade" id="cartao" role="tabpanel" aria-labelledby="cartao-tab">
                    <div class="cartao-container">
                        <form id="formCartao" action="/pagamento/cartao" method="POST">
                            <input type="hidden" name="valor" value="<%= valor %>">
                            <input type="hidden" name="descricao" value="<%= descricao %>">
                            <% if (itens && itens.length) { %>
                              <% itens.forEach(function(it, idx){ %>
                                <input type="hidden" name="itens[<%= idx %>][produtoId]" value="<%= it.produtoId %>">
                                <input type="hidden" name="itens[<%= idx %>][quantidade]" value="<%= it.quantidade %>">
                              <% }) %>
                            <% } else if (produtoId) { %>
                              <input type="hidden" name="produtoId" value="<%= produtoId %>">
                              <input type="hidden" name="quantidade" value="<%= quantidade || 1 %>">
                            <% } %>

                            <div class="row">
                                <div class="col-md-6">
                                    <!-- Dados do usuário (readonly) + dados do cartão -->
                                    <div class="mb-3">
                                        <label class="form-label">Nome (conta)</label>
                                        <input type="text" class="form-control" name="nomeConta" value="<%= usuario ? usuario.nome : '' %>" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">CPF (conta)</label>
                                        <input type="text" class="form-control" name="cpfConta" value="<%= usuario ? usuario.cpf : '' %>" readonly>
                                    </div>

                                    <div class="mb-3 text-start">
                                        <label for="numeroCartao" class="form-label">Número do Cartão</label>
                                        <input type="text" id="numeroCartao" name="numeroCartao" class="form-control" maxlength="19" placeholder="XXXX XXXX XXXX XXXX" required>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="validade" class="form-label">Validade</label>
                                            <input type="text" id="validade" name="validade" class="form-control" maxlength="5" placeholder="MM/AA" required>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="cvv" class="form-label">CVV</label>
                                            <input type="text" id="cvv" name="cvv" class="form-control" maxlength="3" placeholder="123" required>
                                        </div>
                                    </div>
                                    <div class="mb-3 text-start">
                                        <label for="nomeTitular" class="form-label">Nome do Titular</label>
                                        <input type="text" id="nomeTitular" name="nomeTitular" class="form-control" required>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <!-- Endereço de entrega (editável) -->
                                    <h6 class="mt-1">Endereço de entrega</h6>
                                    <div class="mb-3">
                                        <label class="form-label">CEP</label>
                                        <input type="text" name="cep" class="form-control" value="<%= usuario ? usuario.cep : '' %>">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Endereço</label>
                                        <input type="text" name="endereco" class="form-control" value="<%= usuario ? usuario.endereco : '' %>">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Número</label>
                                        <input type="text" name="numero" class="form-control" value="<%= usuario ? usuario.numero : '' %>">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Bairro</label>
                                        <input type="text" name="bairro" class="form-control" value="<%= usuario ? usuario.bairro : '' %>">
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Cidade</label>
                                            <input type="text" name="cidade" class="form-control" value="<%= usuario ? usuario.cidade : '' %>">
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Estado</label>
                                            <input type="text" name="estado" class="form-control" value="<%= usuario ? usuario.estado : '' %>">
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100 mt-2">
                                        <i class="fa-solid fa-lock me-2"></i>Pagar com Cartão
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/pagamento.js"></script>
</body>
</html>
