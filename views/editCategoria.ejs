<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Categoria | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/editCategoria.css">
    <link rel="stylesheet" href="/stylesheets/barra_rolagem.css">
    <link rel="icon" type="image/jpg" href="/images/logo3.jpg">
</head>
<body>
    <div class="container-edit-categoria">
        <div class="header-edit-categoria">
            <a href="/createCategoria" class="btn-voltar">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
            <h2>Editar Categoria</h2>
        </div>
        <% if (typeof erro !== 'undefined' && erro) { %>
          <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i> <%= erro %>
          </div>
        <% } %>
        <form action="/createCategoria/categorias/editar/<%= categoria.ID %>" method="POST">
            <div class="form-group">
                <label class="form-label" for="categoryName">NOME DA CATEGORIA</label>
                <input type="text" class="form-control" id="categoryName" name="categoryName" value="<%= categoria.nome %>" required>
            </div>
            <button type="submit" class="btn-salvar">
                <i class="fas fa-save"></i> SALVAR ALTERAÇÕES
            </button>
        </form>
    </div>
    <script src="/javascripts/editCategoria.js"></script>
</body>
</html>